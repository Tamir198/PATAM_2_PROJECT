<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="attendance" prefHeight="400.0" prefWidth="747.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.AttendanceList">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="747.0">
         <children>
            <Label fx:id="status" alignment="CENTER" prefHeight="21.0" prefWidth="702.0" textAlignment="CENTER" textFill="#dd1313">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TableView fx:id="table" prefHeight="293.0" prefWidth="702.0">
              <columns>
                <TableColumn fx:id="id" prefWidth="40.0" text="Id" />
                <TableColumn fx:id="firstname" editable="true" minWidth="50.0" prefWidth="100.0" text="Firstname" />
                  <TableColumn fx:id="lastname" editable="true" prefWidth="100.0" text="Lastname" />
                  <TableColumn fx:id="gender" prefWidth="60.0" text="Gender" />
                  <TableColumn fx:id="email" editable="true" prefWidth="200.0" text="Email" />
                  <TableColumn fx:id="phone_number" editable="true" prefWidth="200.0" text="Phone Number" />
              </columns>
            </TableView>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
               <children>
                   <Button fx:id="addAttend" mnemonicParsing="false" onAction="#addAttendance" text="Add Attendance" textAlignment="CENTER">
                       <font>
                           <Font size="18.0" />
                       </font>
                       <padding>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                       </padding>
                   </Button>
                   <Button mnemonicParsing="false" onAction="#editAttendanceList" text="Update Attendance" textAlignment="CENTER">
                       <font>
                           <Font size="18.0" />
                       </font>
                       <padding>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                       </padding>
                   </Button>
                   <Button mnemonicParsing="false" onAction="#deleteAttendance" text="Delete Attandance" textAlignment="CENTER">
                       <font>
                           <Font size="18.0" />
                       </font>
                       <padding>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                       </padding>
                   </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
